{
  "compilerOptions": {
    "module": "node16",
    "esModuleInterop": true,
    "allowArbitraryExtensions": true,
    "declaration": true,
    "target": "ES2022",
    "moduleResolution": "node16",
    "sourceMap": true,
    "outDir": "dist",
  },
  "include": ["src/**/**/*.ts", "test/**/*.ts", "test/**/**/*.ts"],
  "exclude": [
      "build",
      "dist",
      "node_modules",
  ]
}