{
  "name": "@kindredgroup/pit-k8s-deployer",
  "version": "0.0.1-dev",
  "description": "The deployment utility for apps designed to run in K8s clusters",
  "type": "module",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kindredgroup/pit-toolkit.git"
  },
  "author": "kindredgroup",
  "license": "MIT",
  "homepage": "https://github.com/kindredgroup/pit-toolkit#readme",
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.8.9",
    "@types/sinon": "^17.0.2",
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "copyfiles": "^2.4.1",
    "esmock": "^2.6.0",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "npx tsc",
    "dev.start-example": "npm run build && scripts/start-example.sh $@",
